<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient">

        <!--  Header Starts-->
        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">
            <!-- Logo Start-->
            <ImageView android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1.00" />
            <!-- Logo Ends -->
        </LinearLayout>
        <!--  Header Ends -->

        <!-- Login Form -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_marginTop="10dp"
            android:layout_below="@id/header"
            android:weightSum="1">

            <!-- Brand Register Label -->
            <!--  First Name Label -->

            <TextView android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="First Name"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:paddingLeft="1dp"
                />

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:background="@drawable/et_shape"
                android:textSize="20sp"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:paddingLeft="1dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/et_firstname" />
            <!-- Last Name Label -->

            <TextView android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:text="Last Name"
                android:textSize="18dp"
                android:paddingLeft="1dp"
                />

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:background="@drawable/et_shape"
                android:textSize="20sp"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:paddingLeft="1dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/et_lastname" />

            <!-- Company Name Label -->

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:text="Company Name"
                android:textSize="18dp"
                android:paddingLeft="1dp"
                />

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:background="@drawable/et_shape"
                android:textSize="20sp"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:paddingLeft="1dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/et_companyname" />
            <!--  Email Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:text="Email"
                android:textSize="18dp"
                android:paddingLeft="1dp"
                />
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:background="@drawable/et_shape"
                android:textSize="20sp"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:paddingLeft="1dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/et_email" />
            <!--  Contact Number Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:text="Contact Number"
                android:textSize="18dp"
                android:paddingLeft="1dp"
                />
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:background="@drawable/et_shape"
                android:textSize="20sp"
                android:inputType="number"
                android:textColor="#000000"
                android:paddingLeft="1dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/et_contactNo" />
            <!--  Password Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:text="Password"
                android:textSize="18dp"
                android:paddingLeft="1dp"
                />
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:inputType="textPassword"
                android:background="@drawable/et_shape"
                android:textSize="20sp"
                android:paddingLeft="1dp"
                android:textColor="#000000"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/et_pass" />

            <!--  Password Confirmation Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:text="Password Confirmation"
                android:textSize="18dp"
                android:paddingLeft="1dp"
                />
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:inputType="textPassword"
                android:background="@drawable/et_shape"
                android:textSize="20sp"
                android:paddingLeft="1dp"
                android:textColor="#000000"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/et_passConfirm" />

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:checked="false"
                android:text="I a agree to the Terms of Use and Privacy Statement. "
                android:textColor="#ffffff"
                android:textSize="13dp"
                />

            <!-- Register button -->
            <Button android:id="@+id/btnRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Register"
                android:textColor="#ffffff"
                android:background="@drawable/shape"
                android:gravity="center"
                android:textSize="20dp"/>

            <!-- Link to Login Screen -->
            <TextView android:id="@+id/link_to_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Already a member ? Login here"
                android:gravity="center"
                android:textSize="20dip"
                android:textColor="#ffffff"
                android:enabled="true"
                android:autoLink="web"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Brand Register"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true" />


        <!-- Login Form Ends -->
    </RelativeLayout>
</ScrollView>

