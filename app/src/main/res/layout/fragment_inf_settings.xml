<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sap.josh0207.sap2016.fragment.InfSettingsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_black">

        <TextView
            android:text="Follower"
            android:layout_width="133dp"
            android:layout_height="45dp"
            android:id="@+id/setting_merchant_campaign"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TextView
            android:text="Total"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/settings_number_of_active_campaign"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/user_profile_default"
            android:id="@+id/setting_inf_profile_pic"
            android:foregroundGravity="center"
            android:layout_marginLeft="140dp"
            android:visibility="visible"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>

        <TextView
            android:text="Revenue"
            android:layout_width="133dp"
            android:layout_height="45dp"
            android:id="@+id/setting_merchant_paid"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="235dp"/>

        <TextView
            android:text="Total"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/settings_total_paid"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="235dp"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="115dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="513dp"
                android:id="@+id/setting_listView">
            </ListView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
