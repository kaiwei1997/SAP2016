<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_campaign_add_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sap.josh0207.sap2016.CampaignAddPhotoActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_photo_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:title="Add Campaign">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Mood Board Photo"
                android:textColor="#000"
                android:textSize="20dp"
                android:textAlignment="center"
                android:paddingTop="5dp"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="290dp"
                app:srcCompat="@drawable/btn_add_image"
                android:scaleType="centerCrop"
                android:id="@+id/btn_m1"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="290dp"
                app:srcCompat="@drawable/btn_add_image"
                android:scaleType="centerCrop"
                android:id="@+id/btn_m2"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="290dp"
                app:srcCompat="@drawable/btn_add_image"
                android:scaleType="centerCrop"
                android:id="@+id/btn_m3"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
