<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sap.josh0207.sap2016.fragment.BrandNotificationsFragment">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="@drawable/gradient">

    </GridLayout>

    <TextView
        android:text="Active\nCampaign"
        android:layout_width="133dp"
        android:layout_height="45dp"
        android:id="@+id/setting_merchant_campaign"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <TextView
        android:text="Total"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:id="@+id/settings_number_of_active_campaign"
        android:textColor="#000000"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/user_profile_default"
        android:id="@+id/setting_merchant_profile"
        android:layout_marginLeft="150dp"
        android:paddingTop="10dp"/>

    <TextView
        android:text="Name"
        android:layout_width="133dp"
        android:layout_height="45dp"
        android:id="@+id/setting_merchant_name"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="120dp"/>

    <TextView
        android:text="Paid\nAmount"
        android:layout_width="133dp"
        android:layout_height="45dp"
        android:id="@+id/setting_merchant_paid"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="235dp"/>

    <TextView
        android:text="Total"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:id="@+id/settings_total_paid"
        android:textColor="#000000"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="235dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ListView
                android:id="@+id/setting_listView"
                android:layout_width="match_parent"
                android:layout_height="546dp"
                android:layout_marginTop="115dp"
                android:layout_weight="0.24" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
